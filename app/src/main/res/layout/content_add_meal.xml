<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddMealActivity"
    android:background="@drawable/background_normal"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_add_meal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/MealIcon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#2ec7de"
            android:padding="15dp"
            android:tint="@color/colorBtn2"
            app:srcCompat="@drawable/kcal_icon" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/MealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorBtn2"
            android:drawablePadding="10dp"
            android:hint="Nazwa posiłku"
            android:padding="10dp"
            android:textSize="20sp" />

        <SearchView
            android:id="@+id/SearchFromProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorBtn2"
            android:iconifiedByDefault="false"
            android:queryHint="Wybierz z produktów" />

        <SearchView
            android:id="@+id/SearchFromRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorBtn2"
            android:iconifiedByDefault="false"
            android:queryHint="Wybierz z przepisów" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/AddMealBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:padding="16dp"
            android:text="Dodaj posiłek"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>